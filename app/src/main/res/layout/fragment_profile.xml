<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.ProfileFragment">

    <Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layoutMode="clipBounds"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_name" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_pl_logo" />
        </RelativeLayout>
    </Toolbar>


    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="24dp"
            android:src="@drawable/ic_profile"
            android:id="@+id/profile_picture"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="25dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/profile_picture"
            app:layout_constraintTop_toBottomOf="@id/toolbar1"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toRightOf="@id/profile_picture"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_picture"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/fn"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/firstname"
        android:textSize="18dp"
        android:text="First Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/firstname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/ln"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastname"
            android:textSize="18dp"
            android:text="Last Name"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/ln"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/lastname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/date"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataofbirth"
            android:textSize="18dp"
            android:text="April 25, 2001"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/dataofbirth"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/em"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textSize="18dp"
            android:text="firstnamelastname@gmail.com"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/em"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"/>
    <ImageButton
            android:id="@+id/addbtn"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="43dp"
            android:background="@color/white"
            android:src="@drawable/ic_base"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/addbtn"
            app:layout_constraintLeft_toLeftOf="@id/addbtn"
            app:layout_constraintRight_toRightOf="@id/addbtn"
            app:layout_constraintTop_toTopOf="@id/addbtn"
            />
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation"
            app:menu="@menu/bottom_nav"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>