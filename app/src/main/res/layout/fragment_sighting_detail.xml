<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.SightingDetailFragment">

    <Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layoutMode="clipBounds"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_name" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_pl_logo" />
        </RelativeLayout>
    </Toolbar>
    <androidx.core.widget.NestedScrollView
            app:layout_constraintTop_toBottomOf="@id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <ImageView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/map"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            <ImageView
                    android:id="@+id/imageflower"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image"
                    app:layout_constraintTop_toTopOf="@id/map"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="240dp"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/image"
                    android:id="@+id/profile_picture"
                    app:layout_constraintTop_toBottomOf="@id/imageflower"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flower name"
                    android:id="@+id/name"
                    app:layout_constraintTop_toBottomOf="@id/imageflower"
                    app:layout_constraintLeft_toRightOf="@id/profile_picture"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Mahir Korac"
                    android:id="@+id/ownername"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintLeft_toRightOf="@id/profile_picture"
                    android:layout_marginLeft="36dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/profile_picture"
                    android:id="@+id/description"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_margin="25dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_001_chat"
                    android:id="@+id/comment"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 comments"
                    android:id="@+id/commentnum"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintLeft_toRightOf="@id/comment"
                    android:layout_marginLeft="23dp"/>

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pl_icon_favorite"
                    android:id="@+id/favorite"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintRight_toLeftOf="@id/fav_num"
                    android:layout_marginRight="23dp"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 favorites"
                    android:id="@+id/fav_num"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="75dp"
                    android:layout_marginLeft="23dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14 Comments:"
                    android:id="@+id/commentnumber"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="41dp"
                    android:layout_marginBottom="49dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintTop_toBottomOf="@id/comment"
                    app:layout_constraintBottom_toTopOf="@id/recyclerView_sighting_detail"/>
            <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@id/commentnumber"
                    android:id="@+id/recyclerView_sighting_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="12"
                    tools:listitem="@layout/recycler_view_comment"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>