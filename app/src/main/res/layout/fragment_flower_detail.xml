<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutMode="clipBounds">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name"
                android:scaleType="centerCrop"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:gravity="center">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_pl_logo"
                    android:layout_marginRight="25dp"
                    android:scaleType="centerCrop"/>
        </RelativeLayout>
    </Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="351dp"
                    android:src="@drawable/image"
                    android:scaleType="centerCrop"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rectangle_2"
                    android:layout_marginTop="175dp"
                    android:layout_marginLeft="63dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group"
                    android:layout_marginTop="175dp"
                    android:layout_marginLeft="23dp"/>
            <TextView
                    android:id="@+id/sightings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 sightings"
                    android:textColor="@color/white"
                    android:layout_marginTop="179dp"
                    android:layout_marginLeft="78dp"/>
            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading.."
                    android:textColor="@color/white"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="23dp"
                    android:textSize="35dp"/>
            <TextView
                    android:id="@+id/latin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading.."
                    android:textColor="@color/white"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="23dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_base"
                    android:layout_marginTop="327dp"
                    android:layout_marginLeft="23dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+Add New Sighting"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="342dp"
                    android:layout_marginLeft="53dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="409dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="Loading.."
                        android:layout_marginLeft="24dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="420dp"
                    android:orientation="vertical">
                <ProgressBar
                        android:id="@+id/pBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>